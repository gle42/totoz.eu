extends layout.pug

block content
    div(class='unique_totoz')
        div(class='totoz')
                span(class='name') [:!{name}]
                span(class='img')
                    if nsfw=='0' || !sfw
                        img(src="/"+name+".gif")
                    else
                        div(class='nsfw_img') NSFW
                a(class='username',href='/user/' + user_name)= user_name
                if tags.length > 0
                    span(class='tags')
                        each tag in tags
                            a(href='/?q='+tag) #{tag}
                            = ' '
                span
                    strong Créé le : 
                    = created
                span
                    strong Modifié le : 
                    = changed
                span
                    if nsfw=='0'
                        | SFW
                    else
                        | NSFW
                if user
                    form(action="/add_tags", method="post")
                        input(type="text",name='tags',placeholder='tag1 tag2')
                        input(type="hidden", name="totoz_name",value=name)
                        =' '
                        input(type="submit", value="Add")